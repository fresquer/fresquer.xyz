---
import Layout from "../layouts/Layout.astro";

const music = [
  {
    title: "Frío Paradiso",
    artist: "Frio Paradiso",
    url: "https://www.instagram.com/frioparadiso",
  },
  {
    title: "Puñales",
    artist: "Puñales",
    url: "https://www.instagram.com/punyales",
  },
];

const podcasting = [
  {
    title: "Feliz Accidente",
    artist: "Feliz Accidente",
    url: "https://radioespaijove.es/programas/feliz-accidente/",
  },
  // {
  //   title: "Objetivo 90",
  //   artist: "Objetivo 90",
  //   url: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
  // },
  // {
  //   title: "De Camino A: Golden Edition",
  //   url: "https://www.youtube.com/watch?v=dQw4w9WgXcQ",
  // },
];

const photography = [
  {
    title: "Fresquer",
    url: "https://www.instagram.com/fresquer",
  },
];
---

<Layout>
  <div class="bg-black text-white h-full font-monospace">
    <div class="container mx-auto px-4 pt-16">
      <h1 class="text-3xl mb-4">Fresquer's basecamp</h1>
      <p class="text-lg mb-8">
        This is a place where I gather all my projects because, honestly, I'm
        someone who just can't stop creating things.
      </p>
      <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
        <!-- Music Section -->
        <section class="mb-8">
          <h2 class="text-xl mb-4 text-gray-400">Music</h2>
          <ul class="space-y-3">
            {
              music.map((item) => (
                <li>
                  <a
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                  >
                    {item.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Podcasting Section -->
        <section class="mb-8">
          <h2 class="text-xl mb-4 text-gray-400">Podcasting</h2>
          <ul class="space-y-3">
            {
              podcasting.map((item) => (
                <li>
                  <a
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                  >
                    {item.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </section>

        <!-- Photography Section -->
        <section class="mb-8">
          <h2 class="text-xl mb-4 text-gray-400">Photography</h2>
          <ul class="space-y-3">
            {
              photography.map((item) => (
                <li>
                  <a
                    href={item.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline"
                  >
                    {item.title}
                  </a>
                </li>
              ))
            }
          </ul>
        </section>
      </div>
    </div>
  </div>
</Layout>
